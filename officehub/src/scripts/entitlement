CREATE TABLE entitlement (
    id            BIGINT PRIMARY KEY AUTO_INCREMENT,
    code          VARCHAR(100) NOT NULL UNIQUE,  -- e.g. "user.create"
    name          VARCHAR(150) NOT NULL,         -- e.g. "Create Users"
    module        VARCHAR(50)  NOT NULL,         -- e.g. "USER", "ROLE", "ROOM", "ASSET", "ORG"
    action        VARCHAR(50)  NOT NULL,         -- e.g. "CREATE", "VIEW"
    description   VARCHAR(500),
    created_at    TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
    updated_at    TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
);

INSERT INTO entitlement (code, name, module, action, description)
